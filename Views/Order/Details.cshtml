@model CaffeBar.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order @Model.Id</h1>

<div>
    <h4>Table: @Model.TableId</h4>
    <h4>Items:</h4>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.MenuItem.Name - Quantity: @item.Quantity</li>
        }
    </ul>
</div>

<p>
    <a asp-action="AddToOrder" asp-route-orderId="@Model.Id" asp-route-menuItemId="1" class="btn btn-primary">Add Item</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
