@model IEnumerable<CaffeBar.Models.Table>

@{
    ViewData["Title"] = "Tables";
}

<h1>Tables</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Table</a>
</p>

<div class="table-container">
    @foreach (var item in Model) {
        <div class="table-card">
            <div class="table-circle">
                <span class="table-number">@Html.DisplayFor(modelItem => item.Id)</span>
            </div>
            <div class="table-details">
                <p><strong>Seats:</strong> @Html.DisplayFor(modelItem => item.Seats)</p>
                <div class="table-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
