@model CaffeBar.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1 class="text-danger">Delete Reservation</h1>

<h3>Are you sure you want to delete this reservation?</h3>
<div class="mt-4">
    <h4>Reservation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.Name) @Html.DisplayFor(model => model.IdentityUser.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </form>
</div>
