@model CaffeBar.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1 class="text-danger">Delete Reservation</h1>

<h3 class="form-clr">Are you sure you want to delete this reservation?</h3>
<div class="mt-4 form-clr">
    <h4>Reservation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Table</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableId)
        </dd>
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">
            @Model.IdentityUser?.Name @Model.IdentityUser?.Surname
        </dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">
            @Model.Time.ToString(@"hh\:mm")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="MyReservations" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </form>
</div>
