@model IEnumerable<CaffeBar.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="form-clr text-center">Reservations</h1>

<a asp-action="Create" class="btn btn-success">Create New Reservation</a>

<div class="table-responsive d-flex">
    <table class="table table-sm table-bordered shadow-lg" style="width: 80%; background-color: #c6c7c0; border: 2px solid #343a40; border-radius: 8px;">
        <thead class="thead-dark">
            <tr>
                <th>Table</th>
                <th>Date</th>
                <th>Time</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>Table @item.TableId</td>
                    <td>@item.Date.ToString("dd-MM-yyyy")</td>
                    <td>@item.Time.ToString(@"hh\:mm")</td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
