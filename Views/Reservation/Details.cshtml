@model CaffeBar.Models.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<h1 class="form-clr">Reservation Details</h1>

<div class="form-clr">
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Table
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableId)
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.IdentityUser?.Name @Model.IdentityUser?.Surname
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Model.Time.ToString(@"hh\:mm")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
